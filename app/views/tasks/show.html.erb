<h1>ID: <%= @task.id %> - Details</h1>

<table class="table table-bordered">
  <tr>
    <th>ID</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>Task</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>Status</th>
    <td><%= @task.status %></td>
  </tr>
</table>

<%= link_to 'Back to Tasks', tasks_path, class: 'btn btn-secondary' %>
<%= link_to 'Edit This Task', edit_task_path(@task), class: 'btn btn-primary' %>
<%= link_to 'Delete This Task', @task, method: :delete, data: { confirm: 'Do you really want to delete this task?' }, class: 'btn btn-danger' %>